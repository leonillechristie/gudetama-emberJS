<div class="jumbo update-listing show-u-div">
    <h2 class="title">User Information</h2>
    <div class="right detail-section mg-300">
        <h4>General Information</h4>
        <div class="detail owner">
            <strong>User ID:</strong>
            <input type="text" value={{model.userid}}>
        </div>
        <div class="detail">
            <strong>User Name:</strong> 
            <input type="text" value={{model.name}}>
        </div>
        <div class="detail">
            <strong>User Email:</strong> 
            <input type="text" value={{model.email}}>
        </div>
        <button {{ action 'updateUser' }}> Update </button>
    </div>
</div>
<img src="{{model.avatar}}" class="user-pic">
<br><br>

